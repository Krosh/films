.slider-films {
   &__item {
   }
   position relative
   &__poster {
      cursor pointer
      transition $transition-main
      opacity 1
      &:hover {
         opacity 0.8
      }
   }
   &__nav {
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      pointer-events none
      &-prev {
         cursor pointer
         pointer-events auto
         z-index 99
         size 50px
         left -25px
         position absolute
         top 50%
         transform translateY(-50%)
         border-radius 50%
         background-color #53b374
         box-shadow 0 1rem 1.5rem 0 rgba(83,179,116,.3)
         display flex
         justify-content center
         align-items center
         transition $transition-main
         opacity 1
         &:before {
            position absolute
            content ''
            display block
            margin-left -1px
            svg('arrow-point-left', 25px, white)

         }
         &:hover {
            opacity 0.8
         }
      }
      &-next {
         cursor pointer
         pointer-events auto
         z-index 99
         size 50px
         right -25px
         position absolute
         top 50%
         border-radius 50%
         transform translateY(-50%)
         background-color #53b374
         box-shadow 0 1rem 1.5rem 0 rgba(83,179,116,.3)
         display flex
         justify-content center
         align-items center
         transition $transition-main
         opacity 1
         &:before {
            content ''
            position absolute
            display block
            margin-left 1px
            svg('arrow-point-right', 25px, white)
         }
         &:hover {
            opacity 0.8
         }
      }
   }
}